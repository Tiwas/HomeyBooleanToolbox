{
  "id": "no.tiwas.booleantoolbox",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "Boolean Toolbox",
    "nb": "Boolean Toolbox"
  },
  "author": {
    "name": "Lars Kvanum"
  },
  "category": "tools",
  "description": {
    "en": "Create advanced, state-aware logic units for your flows.",
