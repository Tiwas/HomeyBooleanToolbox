    "homepage": "https://tiwas.github.io/HomeyBooleanToolbox/",
    "brandColor": "#FF0000",
    "version": "0.6.0",
    "icon": "/assets/images/icon.png",
    "compatibility": ">=5.0.0",
    "sdk": 3,
    "name": {
        "en": "Boolean Toolbox",
        "nb": "Boolean Toolbox"
    },
    "author": {
        "name": "Lars Kvanum"
    },
    "category": "tools",
    "description": {
        "en": "Create advanced, state-aware logic units for your flows.",
        "nb": "Lag avanserte, tilstandsbevisste logiske enheter for dine flows."
    },
    "drivers": [{
        "id": "logic-unit",
        "name": {
            "en": "Logic Unit",
            "nb": "Logisk Enhet"
        },
        "class": "other",
        "capabilities": ["onoff"],
        "images": {
            "large": "/drivers/logic-unit/assets/images/large.png",
            "small": "/drivers/logic-unit/assets/images/small.png"
        },
        "pair": [{
            "id": "list_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_devices"
            }
        }, {
            "id": "add_devices",
            "template": "add_devices"
        }],
        "settings": [{
            "id": "expression",
            "type": "textarea",
            "label": {
                "en": "Boolean Expression",
                "nb": "Boolsk Uttrykk"
            },
            "hint": {
                "en": "Use A-E. Operators: AND (*, &, AND), OR (+, |, OR), XOR (^, !=, XOR), NOT (!, NOT). Use () to group. Example: (A OR B) AND NOT C",
                "nb": "Bruk A-E. Operatorer: AND (*, &, AND), OR (+, |, OR), XOR (^, !=, XOR), NOT (!, NOT). Bruk () for å gruppere. Eksempel: (A OR B) AND NOT C"
            },
            "value": "(A+B)*C"
        }, {
            "id": "invert_final",
            "type": "checkbox",
            "label": {
                "en": "Invert final result (NOT)",
                "nb": "Inverter endelig resultat (NOT)"
            },
            "value": false
        }]
    }],
    "flow": {
        "triggers": [
            {
                "id": "output_changed_to_true",
                "title": {
                    "en": "Output changed to TRUE",
                    "nb": "Utgang ble SANN"
                },
                "titleFormatted": {
                    "en": "Output for [[device]] changed to TRUE",
                    "nb": "Utgang på [[device]] ble SANN"
                },
                "args": [{
                    "type": "autocomplete",
                    "name": "device",
                    "placeholder": {
                        "en": "Select Logic Unit",
                        "nb": "Velg Logisk Enhet"
                    }
                }]
            },
            {
                "id": "output_changed_to_false",
                "title": {
                    "en": "Output changed to FALSE",
                    "nb": "Utgang ble USANN"
                },
                "titleFormatted": {
