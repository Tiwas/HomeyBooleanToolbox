            { "id": "input_a_enabled", "type": "checkbox", "label": { "en": "Enable Input", "nb": "Aktiver Inngang" }, "value": true },
            { "id": "input_a_operator", "type": "dropdown", "label": { "en": "Operator", "nb": "Operator" }, "value": "and", "values": [
                { "id": "and", "label": { "en": "AND (*)", "nb": "AND (*)" } },
                { "id": "or", "label": { "en": "OR (+)", "nb": "OR (+)" } },
                { "id": "xor", "label": { "en": "XOR (⊕)", "nb": "XOR (⊕)" } }
            ]},
            { "id": "input_a_not", "type": "checkbox", "label": { "en": "Invert (NOT)", "nb": "Inverter (NOT)" }, "value": false },
