{
  "id": "no.tiwas.booleantoolbox",
  "version": "0.1.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "Boolean Toolbox",
    "nb": "Boolean Toolbox"
  },
  "author": {
    "name": "Lars Kvanum"
  },
  "category": "tools",
  "description": {
    "en": "Create advanced, state-aware logic units for your flows.",
    "nb": "Lag avanserte, tilstandsbevisste logiske enheter for dine flows."
  },
    "drivers": [
    {
      "id": "logic-unit",
      "name": {
        "en": "Logic Unit",
        "nb": "Logisk Enhet"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": { "next": "add_devices" }
        },
        { "id": "add_devices", "template": "add_devices" }
      ],
      "settings": [
        {
          "id": "expression",
          "type": "textarea",
          "label": { "en": "Boolean Expression", "nb": "Boolsk Uttrykk" },
          "value": "(A+B)*C"
        },
        {
          "id": "invert_final",
          "type": "checkbox",
          "label": { "en": "Invert final result (NOT)", "nb": "Inverter endelig resultat (NOT)" },
          "value": false
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "output_true",
        "title": {
          "en": "Output becomes true",
          "nb": "Resultatet blir sant"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ],
        "tokens": [
          {
            "name": "inputs",
            "type": "string",
            "title": { "en": "Input States", "nb": "Inngangstilstander" }
          }
        ]
      },
      {
        "id": "output_false",
        "title": {
          "en": "Output becomes false",
          "nb": "Resultatet blir usant"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ],
        "tokens": [
          {
            "name": "inputs",
            "type": "string",
            "title": { "en": "Input States", "nb": "Inngangstilstander" }
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "output_is_true",
        "title": {
          "en": "Output is true",
          "nb": "Resultatet er sant"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "set_input_a1_true",
        "title": {
          "en": "Set input A to true (from true-path)",
          "nb": "Sett inngang A til sant (fra true-sti)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ]
      },
      {
        "id": "set_input_a2_true",
        "title": {
          "en": "Set input A to false (from false-path)",
          "nb": "Sett inngang A til usant (fra false-sti)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ]
      },
      {
        "id": "set_input_b1_true",
        "title": {
          "en": "Set input B to true (from true-path)",
          "nb": "Sett inngang B til sant (fra true-sti)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ]
      },
      {
        "id": "set_input_b2_true",
        "title": {
          "en": "Set input B to false (from false-path)",
          "nb": "Sett inngang B til usant (fra false-sti)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ]
      },
      {
        "id": "set_input_c1_true",
        "title": {
          "en": "Set input C to true (from true-path)",
          "nb": "Sett inngang C til sant (fra true-sti)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ]
      },
      {
        "id": "set_input_c2_true",
        "title": {
          "en": "Set input C to false (from false-path)",
          "nb": "Sett inngang C til usant (fra false-sti)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ]
      },
      {
        "id": "set_input_d1_true",
        "title": {
          "en": "Set input D to true (from true-path)",
          "nb": "Sett inngang D til sant (fra true-sti)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ]
      },
      {
        "id": "set_input_d2_true",
        "title": {
          "en": "Set input D to false (from false-path)",
          "nb": "Sett inngang D til usant (fra false-sti)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ]
      },
      {
        "id": "set_input_e1_true",
        "title": {
          "en": "Set input E to true (from true-path)",
          "nb": "Sett inngang E til sant (fra true-sti)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ]
      },
      {
        "id": "set_input_e2_true",
        "title": {
          "en": "Set input E to false (from false-path)",
          "nb": "Sett inngang E til usant (fra false-sti)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ]
      }
    ]
  },
  "images": [
    {
      "type": "large",
      "path": "/assets/images/promo_large.jpg"
    },
    {
      "type": "small",
      "path": "/assets/images/promo_small.jpg"
    }
  ]
}