  "source": "https://github.com/Tiwas/HomeyBooleanToolbox",
  "homepage": "https://tiwas.github.io/HomeyBooleanToolbox/",
  "brandColor": "#FF0000",
  "version": "0.5.0",
  "icon": "/assets/images/icon.png",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "Boolean Toolbox",
    "nb": "Boolean Toolbox"
  },
  "author": {
    "name": "Lars Kvanum"
  },
  "category": "tools",
  "description": {
    "en": "Create advanced, state-aware logic units for your flows.",
    "nb": "Lag avanserte, tilstandsbevisste logiske enheter for dine flows."
  },
  "drivers": [
    {
      "id": "logic-unit",
      "name": {
        "en": "Logic Unit",
        "nb": "Logisk Enhet"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "images":
      {
        "large": "/drivers/logic-unit/assets/images/large.png",
        "small": "/drivers/logic-unit/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "id": "expression",
          "type": "textarea",
          "label": {
            "en": "Boolean Expression",
            "nb": "Boolsk Uttrykk"
          },
          "hint": {
            "en": "Use A-E. Operators: AND (*, &, AND), OR (+, |, OR), XOR (^, !=, XOR), NOT (!, NOT). Use () to group. Example: (A OR B) AND NOT C",
            "nb": "Bruk A-E. Operatorer: AND (*, &, AND), OR (+, |, OR), XOR (^, !=, XOR), NOT (!, NOT). Bruk () for Ã¥ gruppere. Eksempel: (A OR B) AND NOT C"
          },
          "value": "(A+B)*C"
        },
        {
          "id": "invert_final",
          "type": "checkbox",
          "label": {
            "en": "Invert final result (NOT)",
            "nb": "Inverter endelig resultat (NOT)"
          },
          "value": false
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "output_true",
        "title": {
          "en": "Output becomes true",
          "nb": "Resultatet blir sant"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ],
        "tokens": [
          {
            "name": "inputs",
            "type": "string",
            "title": {
              "en": "Input States",
              "nb": "Inngangstilstander"
            }
          }
        ]
      },
      {
        "id": "output_false",
        "title": {
          "en": "Output becomes false",
          "nb": "Resultatet blir usant"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ],
        "tokens": [
          {
            "name": "inputs",
            "type": "string",
            "title": {
              "en": "Input States",
              "nb": "Inngangstilstander"
            }
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "output_is_true",
        "title": {
          "en": "Output is true",
          "nb": "Resultatet er sant"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=logic-unit"
          }
        ]
      }
    ],
    "actions": [
